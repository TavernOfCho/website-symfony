{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body_class %}login-page{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/signin.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/signin.js') }}"></script>
{% endblock %}


{% block body %}
    <div class="text-center">
        {{ form_start(form, {'attr': {'class': 'form-signin', 'action': path('security_login_check')}}) }}
        <img class="mb-4" src="{{ asset('build/images/bootstrap-solid.svg') }}" alt="" width="72" height="72">

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Username</label>
        {{ form_widget(form._username) }}

        <label for="inputPassword" class="sr-only">Password</label>
        {{ form_widget(form._password) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
